<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
        <LinearLayout
            android:id="@+id/displayLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@color/blue"
            android:padding="10dp"
            >
<!--            <TextView-->
<!--                android:id="@+id/cursorPositionDisplay"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:background="@color/blue"-->
<!--                android:textColor="@color/white"-->
<!--                android:text="0"-->
<!--                android:textSize="20dp"-->
<!--                />-->

            <TextView
                android:id="@+id/expressionDisplay"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:text="0.0"
                android:textSize="30dp"
                />
            <TextView
                android:id="@+id/resultDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:text="0.0"
                android:textSize="40dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scientific"
                android:id="@+id/btnScientific"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:textColor="@color/blue"
                android:textSize="16dp"
                android:fontFamily="@font/montserrat"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Standard"
                android:id="@+id/btnStandard"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:textColor="@color/blue"
                android:textSize="16dp"
                />

        </LinearLayout>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            ><com.example.scientificcalculator.components.CustomButton
            android:id="@+id/btnAC"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="AC" />

            <com.example.scientificcalculator.components.CustomButton
                android:id="@+id/btnBracket"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="()" />
            <com.example.scientificcalculator.components.CustomButton
                android:id="@+id/btnModulus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="%" />

            <com.example.scientificcalculator.components.CustomButton
                android:id="@+id/btnMinus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="-" />


        </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                >
                <com.example.scientificcalculator.components.CustomButton
                    android:id="@+id/btn7"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:text="7" />
                <com.example.scientificcalculator.components.CustomButton
                    android:id="@+id/btn8"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:text="8" />

                <com.example.scientificcalculator.components.CustomButton
                    android:id="@+id/btn9"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:text="9" />
                <com.example.scientificcalculator.components.CustomButton
                    android:id="@+id/btnDivide"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="/" />


            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tableRow1"
                android:layout_marginVertical="8dp"
                >
                <com.example.scientificcalculator.components.CustomButton
                    android:id="@+id/btn4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:text="4" />
                <com.example.scientificcalculator.components.CustomButton
                    android:id="@+id/btn5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:text="5" />

                <com.example.scientificcalculator.components.CustomButton
                    android:id="@+id/btn6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:text="6" />
                <com.example.scientificcalculator.components.CustomButton
                    android:id="@+id/btnMultiply"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="x" />


            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tableRow2"
                android:layout_marginVertical="8dp"
                >
                <com.example.scientificcalculator.components.CustomButton
                    android:id="@+id/btn1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:text="1" />
                <com.example.scientificcalculator.components.CustomButton
                    android:id="@+id/btn2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:text="2" />

                <com.example.scientificcalculator.components.CustomButton
                    android:id="@+id/btn3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:text="3" />
                <com.example.scientificcalculator.components.CustomButton
                    android:id="@+id/btnPlus"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="+" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tableRow3"
                android:layout_marginVertical="8dp"
                >
                <com.example.scientificcalculator.components.CustomButton
                    android:id="@+id/btn0"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:text="0" />
                <com.example.scientificcalculator.components.CustomButton
                    android:id="@+id/btnDot"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:text="." />



                <com.example.scientificcalculator.components.CustomButton
                    android:id="@+id/btnAns"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Ans" />
                <com.example.scientificcalculator.components.CustomButton
                    android:id="@+id/btnResult"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:text="=" />
            </TableRow>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
